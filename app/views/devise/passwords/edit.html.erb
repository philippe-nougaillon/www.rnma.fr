<div id="main-container" style='background-image: url(/backgroundRNMA3.png);background-size: 100%;background-repeat: no-repeat;'>
  <div id="main-content">
    <div id="connexion">
      <h1 class="title is-2 is-color-primary has-text-centered">Changement de Mot de Passe</h1>
      <hr>
      <%= bulma_form_with(model: resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field">
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", label: "Nouveau mot de passe" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> charact√®res minimum)</em><br />
          <% end %>
        </div>

        <div class="field">
          <%= f.password_field :password_confirmation, autocomplete: "new-password", label: "Confirmation du nouveau mot de passe" %>
        </div>

        <div class="actions">
          <%= f.submit "Changer mon Mot de Passe", class: 'button is-info' %>
        </div>
      <% end %>

      <%= render "devise/shared/links" %>
    </div>
  </div>
</div>