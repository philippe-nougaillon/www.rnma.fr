<div style="<%= current_user.admin ? '' : 'margin-left: 160px; margin-right: 160px; margin-top: 15px' %>">
  <h1 class="title is-2">
    Modifier Maison
  </h1>

  <%= render 'form', maison: @maison %>

  <div class="mb-6">
    <% if current_user.admin %>
    <%= link_to 'Voir', @maison %>
      |
      <%= link_to 'Retour sur la liste des maisons', maisons_path %>
      |
    <% end %>
    <%= link_to 'Retour sur l\'espace membre', membres_index_path %>
  </div>
</div>