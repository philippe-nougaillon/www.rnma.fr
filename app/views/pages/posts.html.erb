<section class="hero is-background-color-primary mb-6">
    <div class="hero-body has-text-centered">
        <h1 class="title is-1 has-text-white">
            Actus du Réseau
        </h1>
    </div>
</section>

<div id="main-container">
    <div id="main-content">
        <div class="columns is-multiline">
            <%= render partial: 'partials/post_tile', collection: @posts.réseau, as: :post, locals: {post_réseau: true } %>
        </div>

        <section class="hero is-very-small is-background-color-primary mb-6">
            <div class="hero-body has-text-centered">
                <h1 class="title is-1 has-text-white">
                    Échos des Territoires
                </h1>
            </div>
        </section>

        <div class="columns is-multiline">
            <%= render partial: 'partials/post_tile', collection: @posts.territoires, as: :post, locals: {post_réseau: false } %>
        </div>

        <section class="hero is-very-small is-background-color-primary mb-6">
            <div class="hero-body has-text-centered">
                <h1 class="title is-1 has-text-white">
                    Échos du monde associatif
                </h1>
            </div>
        </section>

        <div class="columns is-multiline mb-6">
            <%= render partial: 'partials/post_tile', collection: @posts.secteur, as: :post, locals: {post_réseau: false } %>
        </div>
    </div>
</div>