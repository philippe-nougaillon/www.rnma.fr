<h1 class="title is-2">
  <i class="fas fa-archive" style="color: grey"></i>
  Archives des Newsletters SendInBlue
</h1>

<%= form_tag sibs_path, method: :get do %>
  <%= render partial: 'partials/search' %>
<% end %>

<div class="table-container">
  <table class="table is-hoverable is-striped is-fullwidth">
    <thead>
      <tr>
        <th>Intitulé</th>
        <th>Envoyée le</th>
        <th>Url</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @sibs.each do |sib| %>
        <tr>
          <td><%= sib.intitulé %></td>
          <td><%= l sib.envoyée_le %></td>
          <td><%= sib.url %></td>
          <td><%= link_to 'Voir', sib %></td>
          <td><%= link_to 'Modifier', edit_sib_path(sib) %></td>
          <td><%= link_to '[X]', sib, method: :delete, data: { confirm: 'Êtes-vous certain(e) ?' } %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>

<%= page_entries_info @sibs, entry_name: 'archive' %>
<%= paginate @sibs %>

<div class="mb-6"></div>