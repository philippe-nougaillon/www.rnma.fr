<h1 class="title is-2">
  <i class="fas fa-newspaper"></i>
  Actualités
</h1>

<%= form_tag posts_path, method: :get do %>
  <%= render partial: 'partials/search', locals: { states: Post.workflow_spec.states.keys.to_a } %>
<% end %>

<div class="table-container">
  <table class="table is-hoverable is-striped is-fullwidth">

    <thead>
      <tr>
        <th>Titre</th>
        <th>Chapeau</th>
        <th>Membres?</th>
        <th>Type</th>
        <th>État</th>
        <th>Depuis</th>
        <th colspan=2></th>
      </tr>
    </thead>

    <tbody>
      <%= render @posts %>
    </tbody>

    <tfoot>
      <tr><th colspan=8></tr>
    <tfoot>
    
  </table>
</div>

<%= page_entries_info @posts, entry_name: 'actualité' %>
<%= paginate @posts %>
