<h1 class="title is-2">
  <i class="fas fa-calendar-alt"></i>
  Agenda des Évènements
</h1>

<%= form_tag evenements_path, method: :get do %>
  <%= render partial: 'partials/search', locals: { states: Evenement.workflow_spec.states.keys.to_a } %>
<% end %>

<div class="table-container">
  <table class="table is-hoverable is-striped is-fullwidth">

    <thead>
      <tr>
        <th><%= sortable :debut do %>Date évènement<% end %></th>
        <th>Titre</th>
        <th>Chapeau</th>
        <th>Lieu</th>
        <th>Publique?</th>
        <th>Membres?</th>
        <th>État</th>
        <th>Depuis</th>
        <th>Poids</th>
        <th colspan=4></th>
      </tr>
    </thead>

    <tbody>
      <%= render @evenements %>
    </tbody>

    <tfoot>
      <tr><th colspan=13></th></tr>
    </tfoot>
    
  </table>
</div>

<%= page_entries_info @evenements, entry_name: 'évènement' %>
<%= paginate @evenements %>
