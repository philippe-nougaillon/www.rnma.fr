<div class="box">
    <div class="columns mb-4">
      <div class="column">
        <p>
          <i class="fas fa-id-card-alt fa-2x"></i>
        </p>
      </div>
      <div class="column is-12">
        <p class="title is-3">
          <%= page_title!(contact.prénom_nom) %>
        </p>
        <p class="subtitle is-5">
          <%= contact.fonction %>
        </p>
      </div>
    </div>

    <div class="columns ml-6">
      <div class="column">
        <p>
          <strong>Adresse Contact</strong>
          <br>
          <%= contact.adresse %>
          <br>
          <p class="is-inline-block">
            <%= contact.cp %>
          </p>
          <p class="has-text-weight-bold is-inline-block">
            <%= contact.ville %>
          </p>
          <% unless contact.dep_name.blank? %>
            (<%= contact.dep_name %>)
            <br>
            <div class="mt-3">
              <strong>Région :</strong>
              <%= contact.region_name %>
            </div>
          <% end %>
        </p>
      </div>
      <div class="column">
        <p class="mt-3">
          <strong>
            Email :
            <%= mail_to contact.email, contact.email  %>
          </strong>
        </p>
        <% unless contact.téléphone.blank? %>
          <p>
            <strong>Téléphone fixe :</strong>
            <%= contact.téléphone %>
          </p>
        <% end %>
        <% unless contact.mobile.blank? %>
          <p>
            <strong>Mobile :</strong>
            <%= contact.mobile %>
          </p>
        <% end %>
      </div>
    </div>
</div>