<div>
  <p class="is-size-6 has-text-weight-bold mb-2 mt-6">
    Partager :
  </p>
  <%= link_to "https://www.linkedin.com/shareArticle?url=#{ url }", target: "_blank" do %>
    <i class="fab fa-linkedin-in fa-2x mx-1"></i>
  <% end %>
  <%= link_to "https://www.facebook.com/share.php?u=#{ url }", target: "_blank" do %>
    <i class="fab fa-facebook fa-2x mx-1"></i>
  <% end %>
  <%= link_to "https://twitter.com/intent/tweet?url=#{ url }", target: "_blank" do %>
    <i class="fab fa-twitter fa-2x mx-1"></i>
  <% end %>
  <%= mail_to "" ,body: url do%>
    <i class="fas fa-envelope-open-text fa-2x mx-1"></i>
  <% end %>
  <hr>
</div>

