<div class="container">
  <h1>Nouveau message de contact</h1>

  <p>
    <strong>Nom : </strong>
    <%= @message.nom %>
  </p>
  <p>
    <strong>Email : </strong>
    <%= @message.email %>
  </p>
  <p>
    <strong>Structure : </strong>
    <%= @message.structure %>
  </p>
  <p>
    <strong>Téléphone : </strong>
    <%= @message.téléphone %>
  </p>
  <p>
    <strong>Message : </strong>
    <%= @message.message %>
  </p>
  <p>
    <%= link_to 'Voir le message', @message %>
  </p>
</div>