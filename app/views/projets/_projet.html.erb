<tr>
  <td>
    <%= link_to projet do %>
      <figure class="image is-48x48">
        <% if projet.photo.attached? %>
          <%= image_tag projet.photo, width: '100%', height: '100%', alt: "photo du projet '#{ projet.titre }'" %>
        <% else %>
          <%= image_tag 'ressource_placeholder.webp', width: '100%', height: '100%', alt: "photo de remplacement du projet '#{ projet.titre }'" %>
        <% end %>
      </figure>
    <% end %>
  </td>
  <td><%= link_to projet.titre, projet %></td>
  <td><%= projet.chapeau %></td>
  <td><%= projet.workflow_state %></td>
  <td>
    <% if projet.document.attached? %>
      <%= link_to "Accéder au document", projet.document %>
    <% end %>
  </td>
  <td><%= projet.poids %></td>
  <td><%= link_to 'Modifier', edit_projet_path(projet) %></td>
  <td><%= link_to '[X]', projet, method: :delete, data: { confirm: 'Êtes-vous certain(e) ?' } %></td>
</tr>