<div class="nested-form-wrapper" data-new-record="<%= document.object.new_record? %>">
  <div class="field has-addons">
    <div class="control is-expanded">
      <%= document.label :fichier, class: 'has-text-weight-bold has-text-dark' %>
      <%= document.file_field :fichier, 'aria-label': 'Choisir un fichier' %>
    </div>
    <div class="control">
      <button title="Supprimer l'action" type="button" class="button" data-action="nested-form#remove">
        <b>x</b>
      </button>
    </div>
  </div>
  <%= document.hidden_field :_destroy %>
</div>

<script type="application/javascript">
  $('input[type="file"]').change(function(e){
    var fileName = e.target.files[0].name;
    $('.custom-file-label').html(fileName);
  });
</script>