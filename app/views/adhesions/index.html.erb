<h1 class="title is-2">
  <i class="fas fa-file-contract"></i>
  Adhésions
</h1>

<%= form_tag adhesions_path, method: :get do %>
  <%= render partial: 'partials/search', locals: { states: Adhesion.workflow_spec.states.keys.to_a } %>
<% end %>

<div class="table-container">
  <table class="table is-hoverable is-striped is-fullwidth">
  
    <thead>
      <tr>
        <th><%= sort_link 'adhesions.id', 'ID' %></th>
        <th><%= sort_link 'maisons.nom', 'Nom Structure' %></th>
        <th><%= sort_link 'adhesions.type_structure', 'Type' %></th>
        <th><%= sort_link 'adhesions.cp', 'CP' %></th>
        <th><%= sort_link 'adhesions.ville', 'Ville' %></th>
        <th><%= sort_link 'adhesions.nom', 'Nom' %></th>
        <th><%= sort_link 'adhesions.workflow_state', 'État' %></th>
        <th><%= sort_link 'adhesions.updated_at', 'MÀJ' %></th>
        <th colspan=3></th>
      </tr>
    </thead>

    <tbody>
      <%= render @adhesions %>
    </tbody>

    <tfoot>
      <tr><th colspan=12></th></tr>
    </tfoot>

  </table>
</div>

<%= page_entries_info @adhesions, entry_name: 'adhésion' %>
<%= paginate @adhesions %>

<div class="mb-6"></div>